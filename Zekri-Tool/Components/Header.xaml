<UserControl x:Class="Zekri_Tool.Components.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zekri_Tool.Components"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    <DockPanel Width="auto" Background="{StaticResource grd_dark}" LastChildFill="False">
        <DockPanel.Effect>
            <DropShadowEffect ShadowDepth="0"/>
        </DockPanel.Effect>
        <Image DockPanel.Dock="Left" Source="{StaticResource img_construct}" Margin="15, 15, 5, 15"></Image>
        <Label DockPanel.Dock="Left" Content="Zekri Tool" VerticalAlignment="Center" Foreground="White" FontSize="20" FontWeight="Bold"></Label>
    </DockPanel>
</UserControl>
