<UserControl x:Class="Zekri_Tool.Components.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zekri_Tool.Components"
             mc:Ignorable="d">
    <StackPanel x:Name="pnl_container" Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{Binding BackColor}" Orientation="Horizontal">
        <StackPanel.Effect>
            <DropShadowEffect Direction="180" ShadowDepth="0" Color="#FF4B4B4B"/>
        </StackPanel.Effect>
        <Image x:Name="img_icon" Height="{Binding IconSize}" Margin="10,10,0,10" Width="{Binding IconSize}" Source="{Binding Icon}"/>
        <Label x:Name="lbl_text" FontSize="{Binding TextFontSize}" Foreground="White" Content="{Binding Text}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" />
    </StackPanel>
</UserControl>
