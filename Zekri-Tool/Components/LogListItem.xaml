<UserControl x:Class="Zekri_Tool.Components.LogListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zekri_Tool.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="auto" Height="auto">

    <Border Name="li_container" BorderThickness="1" BorderBrush="Silver" CornerRadius="3" Margin="0, 0, 0, 5" Padding="5">
        <DockPanel Width="auto" Height="auto" LastChildFill="True">
            <Label Name="lbl_time" DockPanel.Dock="Right" Content="Time" Foreground="{StaticResource clr_muted}"></Label>
            <StackPanel DockPanel.Dock="Left"  Orientation="Vertical">
                <Label Name="lbl_name" Content="File Name" FontSize="18" Foreground="{StaticResource clr_main}"></Label>
                <Label Name="lbl_path" Content="Full Path" Foreground="{StaticResource clr_dark}"></Label>
            </StackPanel>
        </DockPanel>
    </Border>
    
</UserControl>
